#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# change cd to automatically ls
function cd {
  builtin cd "$@" && ls --color=auto 
}
# ls aliases
alias ls='ls --color=auto'
alias la='ls -la'
# vim aliases
alias v='vim'
alias vi='vim'
# git aliases
alias ga='git add'
alias gc='git commit -m'
alias gp='git push'
alias gst='git status'
alias gd='git diff'
# Alias for shared repository between my computers
alias share='git --git-dir=$HOME/SharedRepo --work-tree=$HOME'
# checkbashisms alias
alias cb='checkbashisms'
# vim keys with info
alias info='info --vi-keys'

alias pampas='ssh -A -Y ist190394@pampas.ncg.ingrid.pt'

alias tbrowser='root -l -e "TBrowser t"'

alias mpirun='mpirun --oversubscribe --mca opal_warn_on_missing_libcuda 0 -np'

#Configures the shell prompt
PS1='\e[1;35m\u@\h \e[33m\w \e[36m\D{%T}\e[00m \n$ '

# Enable vi mode
set -o vi

# Anaconda cli env
alias anaconda_cli='. /opt/anaconda/bin/activate'
