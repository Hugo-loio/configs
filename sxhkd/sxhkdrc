#
# wm independent hotkeys
#

# Screenshot
Print
	mate-screenshot -a

# terminal emulator
super + Return
	$TERMINAL

# program launcher
super + @space
	rofi -show run

# lauch browser
super + i
	$BROWSER

# lauch firefox in private mode
super + p
	firefox -private-window

# lauch ranger
super + r
	$TERMINAL -e ranger

#lauch bookfinder script
super + b
	bookfinder

#lauch menu script

super + shift + m
	menu

#random meme lol

super + shift + v
	random_video

#
# Function keys for my laptop
#

# Increase/Decrease brightness 
# If not working install acpilight
XF86MonBrightness{Up,Down}
	xbacklight {-inc 5,-dec 5}

super + ctrl + {9,0}
	xbacklight {-inc 5,-dec 5}


# Increase/Decrease/Mute volume
XF86Audio{RaiseVolume,LowerVolume,Mute}
	pamixer {-i 5,-d 5,-t}

super + ctrl + {plus,minus,m}
	pamixer {-i 5,-d 5,-t}

# Toggle touchpad
XF86TouchpadToggle
	touchpad_toggle

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspwmctl {quit,restart}

# suspend system
super + alt + s
	betterlockscreen -l dim

# close and kill
super + {_,shift + }BackSpace
	bspc node -{c,k}

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# hide/unhide window
super + {_,shift +} e
	{bspwm_hide,bspwm_unhide}



# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.leaf.!hidden

# focus the next/previous desktop in the current monitor
super + Tab + {shift,_}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
alt + Tab + {_,shift}
	bspc {node,desktop} -f last 

# focus or send to the given desktop
super + {_,ctrl + ,shift + ,shift + ctrl + }{0-9,d}
	bspwm_dynamic_desktops {--cd,--cdm,--mn,--mnm} {0-9,100}

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + Escape
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + shift + Escape
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Rotate nodes in desktop or rotate groupo of nodes
super + {_,alt + } {less, greater} 
	bspc node {@/,@parent} -R {90,-90}

# increase/decrease window gaps
super + {plus,minus} 
    bspc config window_gap $(( $(bspc config window_gap) {+,-} 2 ))    

# no/default window gaps
super + shift + {plus,minus} 
    bspc config window_gap {10,0}    
